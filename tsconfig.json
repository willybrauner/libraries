{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "jsx": "react",
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    // allow to not notify conflicts if the same dependency is imported in
    // two differents packages but not the same version
    // pass to true for disable this check.
    "skipLibCheck": false
  },
  "exclude": ["node_modules", "dist", "test", "stories"]
}
